<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>The Great Number Game</title>
    <style>
        *{
            text-align: center;
        }
        body{
            padding-top: 40px;
            width: 100%;
            align-content: center;
            display: block;
        }
        h1{
            margin-bottom: 20px;
        }
        #answer-box-wrong, #answer-box-correct{
            width: 200px;
            color: white;
            font-size: 40px;
            text-align: center;
            margin: 0 auto 20px;
        }
        #answer-box-wrong{
            height: 180px;
            background-color: red;
            padding: 120px 50px 0 50px;
        }
        #answer-box-correct{
            height: 200px;
            background-color: green;
            padding: 100px 50px 0 50px;
        }
        #play-again{
            margin-top: 60px;
        }
    </style>
</head>
<body>
    <h1>Welcome to the Great Number Game!</h1>
    <p>I am thinking of a number between 1 and 100</p>
    <p>Take a guess!</p>
    <br>
    <% if(message == "Too high!" || message == "Too low!"){ %>
        <div id="answer-box-wrong">
            <%= message %>
        </div>
    <% } %>
    <% if(message.length > 10){ %>
        <div id="answer-box-correct">
            <%= message %>
            <br>
            <form action="/playagain" method="POST">
                <input type="submit" value="Play Again" id="play-again">
            </form>
        </div>
    <% } %>
    <form action="/guess" method="POST">
        <input type="number" name="guess">
        <br>
        <br>
        <input type="submit" name="Submit">
    </form>
</body>